{
  "name": "chrome-extension",
  "displayName": "Clerk Chrome Extension Demo",
  "version": "0.0.1",
  "description": "A feature rich implementation of Clerk with a Plasmo-based Chrome Extension.",
  "author": "Clerk",
  "scripts": {
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "debug": "plasmo dev --verbose",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.6.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "plasmo": "^0.90.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "3",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/webextension-polyfill": "^0.12.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "$CLERK_FRONTEND_API/*",
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*"
    ],
    "key": "$CRX_PUBLIC_KEY"
  }
}
